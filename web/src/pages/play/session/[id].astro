---
import SessionRoom from '../../../components/SessionRoom.tsx';
import { getSession } from '../../../lib/session.ts';

export const prerender = false;

const sessionId = Astro.params.id;
const pid = Astro.url.searchParams.get('pid') || '';

if (!sessionId) {
  return Astro.redirect('/play');
}

const session = await getSession(sessionId);
if (!session) {
  return Astro.redirect('/play');
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>The Molt Pit â€” Session {session.code}</title>
    <meta name="description" content="FFA Tournament Session" />
    <style>*, *::before, *::after { box-sizing: border-box; } body { margin: 0; }</style>
  </head>
  <body>
    <SessionRoom
      client:only="react"
      session={session}
      participantId={pid}
    />
  </body>
</html>
