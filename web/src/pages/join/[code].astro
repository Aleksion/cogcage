---
export const prerender = false;

const code = Astro.params.code?.toUpperCase() || '';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>The Molt Pit â€” Join Session</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Bangers&family=Kanit:ital,wght@0,400;0,800;1,900&display=swap');
      :root {
        --c-yellow: #FFD600; --c-orange: #FF9F1C; --c-red: #EB4D4B;
        --c-cyan: #00E5FF; --c-dark: #1A1A1A; --c-white: #FFFFFF;
        --f-display: 'Bangers', display; --f-body: 'Kanit', sans-serif;
        --radius: 14px; --shadow-hard: 6px 6px 0px rgba(0,0,0,0.2);
      }
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
      body {
        background: radial-gradient(circle at 20% 20%, rgba(255,214,0,0.15), transparent 35%),
          radial-gradient(circle at 80% 0%, rgba(0,229,255,0.12), transparent 40%),
          linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
        font-family: var(--f-body); color: var(--c-dark); min-height: 100vh;
        display: flex; align-items: center; justify-content: center;
      }
      .join-card {
        background: var(--c-white); border: 3px solid var(--c-dark); border-radius: var(--radius);
        box-shadow: var(--shadow-hard); padding: 2.5rem; max-width: 500px; width: 100%;
      }
      .join-card h1 {
        font-family: var(--f-display); font-size: 2rem; text-transform: uppercase;
        letter-spacing: 1px; margin-bottom: 0.5rem; text-align: center;
      }
      .join-card .code-display {
        font-family: var(--f-display); font-size: 2.5rem; letter-spacing: 6px;
        color: var(--c-red); text-align: center; margin-bottom: 1.5rem;
      }
      .field { margin-bottom: 1rem; }
      .field label { font-weight: 900; text-transform: uppercase; font-size: 0.85rem; display: block; margin-bottom: 0.3rem; }
      .field input, .field textarea, .field select {
        width: 100%; border: 3px solid var(--c-dark); border-radius: 12px;
        padding: 0.6rem 0.8rem; font-family: var(--f-body); font-size: 0.95rem;
      }
      .field textarea { min-height: 80px; resize: vertical; }
      .armor-radios { display: flex; gap: 1rem; margin: 0.3rem 0; }
      .armor-radios label { display: flex; align-items: center; gap: 0.3rem; font-weight: 700; cursor: pointer; }
      .loadout-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 0.3rem; margin: 0.3rem 0; }
      .loadout-item { display: flex; align-items: center; gap: 0.3rem; font-size: 0.85rem; }
      .loadout-item input { accent-color: var(--c-yellow); width: 18px; height: 18px; }
      .cta-btn {
        display: block; width: 100%; font-family: var(--f-display); font-size: 1.3rem;
        text-transform: uppercase; padding: 0.9rem; background: var(--c-red); color: var(--c-white);
        border: 4px solid var(--c-dark); border-radius: 999px; box-shadow: 0 6px 0 var(--c-dark);
        cursor: pointer; transition: transform 0.1s ease; margin-top: 1rem;
      }
      .cta-btn:active { transform: translateY(4px); box-shadow: none; }
      .cta-btn:disabled { opacity: 0.6; cursor: not-allowed; }
      .error { color: var(--c-red); font-weight: 800; margin-top: 0.5rem; text-align: center; }
      .hint { font-size: 0.85rem; opacity: 0.6; }
    </style>
  </head>
  <body>
    <div class="join-card">
      <h1>Join FFA Tournament</h1>
      <div class="code-display" id="code-display">{code}</div>

      <form id="join-form">
        <div class="field">
          <label>Crawler Name</label>
          <input id="bot-name" placeholder="e.g. Iron Vanguard" value="Iron Vanguard" required />
        </div>
        <div class="field">
          <label>Directive (Brain)</label>
          <textarea id="bot-prompt" placeholder="Describe your crawler's strategy...">You are an aggressive melee fighter. Prioritize closing distance and striking hard.</textarea>
        </div>
        <div class="field">
          <label>Shell</label>
          <div class="loadout-grid">
            <label class="loadout-item"><input type="checkbox" value="MOVE" checked disabled /> Move (4e)</label>
            <label class="loadout-item"><input type="checkbox" value="MELEE_STRIKE" checked class="loadout-cb" /> Melee (18e)</label>
            <label class="loadout-item"><input type="checkbox" value="RANGED_SHOT" class="loadout-cb" /> Ranged (14e)</label>
            <label class="loadout-item"><input type="checkbox" value="GUARD" checked class="loadout-cb" /> Guard (10e)</label>
            <label class="loadout-item"><input type="checkbox" value="DASH" checked class="loadout-cb" /> Dash (22e)</label>
            <label class="loadout-item"><input type="checkbox" value="UTILITY" class="loadout-cb" /> Utility (20e)</label>
          </div>
        </div>
        <div class="field">
          <label>Armor</label>
          <div class="armor-radios">
            <label><input type="radio" name="armor" value="light" /> Light</label>
            <label><input type="radio" name="armor" value="medium" checked /> Medium</label>
            <label><input type="radio" name="armor" value="heavy" /> Heavy</label>
          </div>
        </div>
        <button type="submit" class="cta-btn" id="join-btn">Join Session</button>
        <div id="error" class="error" style="display:none"></div>
      </form>
    </div>

    <script define:vars={{ code }}>
      const form = document.getElementById('join-form');
      const errorEl = document.getElementById('error');
      const joinBtn = document.getElementById('join-btn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        errorEl.style.display = 'none';
        joinBtn.disabled = true;
        joinBtn.textContent = 'Joining...';

        const name = document.getElementById('bot-name').value.trim() || 'Player';
        const systemPrompt = document.getElementById('bot-prompt').value.trim();
        const loadout = ['MOVE', ...Array.from(document.querySelectorAll('.loadout-cb:checked')).map(el => el.value)];
        const armor = document.querySelector('input[name="armor"]:checked')?.value || 'medium';

        try {
          const res = await fetch('/api/sessions/join-by-code', {
            method: 'POST',
            headers: { 'content-type': 'application/json' },
            body: JSON.stringify({
              code,
              name,
              bot: { name, systemPrompt, loadout, armor },
            }),
          });
          const data = await res.json();
          if (!res.ok) {
            throw new Error(data.error || 'Failed to join');
          }
          window.location.href = `/play/session/${data.sessionId}?pid=${data.participantId}`;
        } catch (err) {
          errorEl.textContent = err.message;
          errorEl.style.display = 'block';
          joinBtn.disabled = false;
          joinBtn.textContent = 'Join Session';
        }
      });
    </script>
  </body>
</html>
